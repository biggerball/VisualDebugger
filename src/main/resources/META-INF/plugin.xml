<idea-plugin>
    <id>no.hvl.tk.visualDebugger</id>
    <name>Visual Debugger</name>
    <vendor email="tim.kraeuterr@gmail.com" url="https://timkraeuter.github.io//">Tim Kr√§uter</vendor>

    <description><![CDATA[
    A plugin that visualizes the variables during a debugging session as a UML object diagram.
    It will launch automatically when debugging is in progress.
    ]]></description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>

    <projectListeners>
        <listener class="no.hvl.tk.visualDebugger.DebuggVisualizerListener"
                  topic="com.intellij.xdebugger.XDebuggerManagerListener"/>
    </projectListeners>

    <actions>
        <group id="DebugVisualizer.VisualizerToolbar" popup="false">
        </group>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
    </actions>
</idea-plugin>